<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shop</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50">
    <%- include('header.ejs') %> 
    <div class="flex p-6">
        <!-- Sidebar -->
        <div class="w-1/4 p-4 bg-white shadow-md rounded-lg">
            <!-- Sort Section -->
            <div class="mb-8">
                <label for="sort" class="block text-gray-700 font-medium mb-3">Sort by</label>
                <select id="sort" class="w-full border-gray-300 rounded-lg shadow-sm p-2">
                    <option>Popular</option>
                    <option>Price: Low to High</option>
                    <option>Price: High to Low</option>
                </select>
            </div>

            <!-- Categories -->
            <div class="mb-8">
                <h2 class="text-lg font-semibold text-gray-800 mb-4">New Collection</h2>
                <ul class="text-gray-600 space-y-2">
                    <li><a href="#" class="hover:text-blue-500">All Products</a></li>
                    <li><a href="#" class="hover:text-blue-500">Discounted Products</a></li>
                </ul>
            </div>

            <!-- Filter Section -->
            <div>
                <h2 class="text-lg font-semibold text-gray-800 mb-4">Filter by:</h2>
                <ul class="text-gray-600 space-y-2">
                    <li><a href="#" class="hover:text-blue-500">Availability</a></li>
                    <li><a href="#" class="hover:text-blue-500">Discount</a></li>
                </ul>
            </div>
        </div>

        <!-- Products Section -->
        <div class="w-2/4 grid grid-cols-3 gap-6 px-4">
            <!-- Sample Product Card -->
            <% products.forEach(function(product){ %>
                <div class="overflow-hidden transform hover:scale-105 transition duration-300">
                    <!-- Product Image -->
                    <div class="h-60 bg-gray-200 flex items-center justify-center bg-[<%=product.bgcolor %>]">
                        <img class="w-full h-full object-cover" src="data:image/png;base64,<%= product.image.toString('base64') %>" alt="Product Image">
                    </div>
                    
                    <!-- Product Details -->
                    <div class="bg-[<%=product.panelcolor %>] text-[<%=product.textcolor %>] p-4 flex justify-between items-center">
                        <div>
                            <h3 class="font-semibold text-lg"><%= product.name %></h3>
                            <p class="text-sm font-medium">â‚¹ <%= product.price %></p>
                        </div>
                        <a class="bg-white text-zinc-500 font-bold text-xl w-8 h-8 rounded-full flex items-center justify-center hover:bg-gray-200" href="/addcart/<%=product._id %>">+</a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

</body>
</html>
